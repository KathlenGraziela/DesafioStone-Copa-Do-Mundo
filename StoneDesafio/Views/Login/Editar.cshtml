@using StoneDesafio.Data.AdministradorDtos

@model AdministradorEditarDto
@{
	ViewData["Tittle"] = "Alterar dados";
}

<form asp-controller="login" asp-action="Editar" method="post">
    <input asp-for="Id" value="@Model.Id" class="d-none" />
    <div class="container col-sm-5">
        <div class="form-group">
            <label for="login" class="form-label">Nome</label>
            <input type="text" asp-for="Nome" placeholder="Coloque seu login" class="form-control input-sm" id="login" value="@Model?.Nome">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
    
        <div class="form-group">
            <label for="senha" class="form-label">Senha</label>
            <input type="password" asp-for="Senha" placeholder="Coloque sua senha" class="form-control input-sm" id="senha">
            @Html.ValidationMessageFor(x => x.Senha)
        </div>

        <button type="submit" class="btn btn-primary">Alterar</button>
    </div>
</form> 