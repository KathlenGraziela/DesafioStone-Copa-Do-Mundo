@model Login
@{
	Layout = "_LayoutDeslogado";
	ViewData["Tittle"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="login" asp-action="Entrar">
    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Email" placeholder="Coloque seu login" class="form-control input-sm" id="login">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    
    <div class="mb-3">
        <label for="senha" class="form-label">Senha</label>
        <input type="password" asp-for="Senha" placeholder="Coloque sua senha" class="form-control input-sm" id="senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

      
    <div>
        <button type="submit" class="btn btn-primary">Entrar</button>
        <button type="submit" class="btn btn-primary">Cadastrar-se</button>
        
        @*Necessário um direcionamento para redefinição de senha - samuel*@
        <button type="button" class="btn btn-link" asp-action="" asp-route-id="">Esqueci minha senha</button>
    </div>
</form>