@model Login
@{
	Layout = "_LayoutDeslogado";
	ViewData["Tittle"] = "Login";
}

<form asp-controller="login" asp-action="Entrar">
      <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Email" class="form-control" id="login">
        @Html.ValidationMessageFor(x => x.Email)
      </div>

      <div class="mb-3">
        <label for="senha" class="form-label" aria-placeholder="insira sua senha">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="senha">
        @Html.ValidationMessageFor(x => x.Senha)
      </div>

      <button type="submit" class="btn btn-primary">Entrar</button>
      
      <td>
        <a asp-action="EsqueceuSenha" asp-route-id="Id">Esqueci minha senha</a>
      </td>
    </form>