@model StoneDesafio.Models.Jogo


@{
    ViewData["Title"] = "Criar novo jogo";
    var listaClubes = (List<Clube>)ViewData["ListaClubes"];
    var listaFases = (List<FaseCampeonato>)ViewData["ListaFases"];
}

<h1>Criar novo jogo</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="criar">
            <div class="form-group">
                @Html.LabelFor(model => model.ClubeA)
                @Html.ValidationMessageFor(model => model.ClubeA, "", new { @class = "text-danger" })
                @Html.DropDownListFor(
                    model => model.ClubeAId,
                    new SelectList(listaClubes, "Id", "Nome"),
                    "Selecione...",
                    new {
                        @class = "dropdown-toggle form-control",
                        style = "width: 100%",
                        @required = true,
                        Id = "Id",
                        @tabindex = "1"
                    }
                )
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ClubeB)
                @Html.ValidationMessageFor(model => model.ClubeB, "", new { @class = "text-danger" })
                @Html.DropDownListFor(
                    model => model.ClubeBId,
                    new SelectList(listaClubes, "Id", "Nome"),
                    "Selecione...",
                    new {
                        @class = "dropdown-toggle form-control",
                        style = "width: 100%",
                        @required = true,
                        id = "Id",
                        @tabindex = "1"
                    }
                )
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Fase)
                @Html.ValidationMessageFor(model => model.Fase, "", new { @class = "text-danger" })
                @Html.DropDownListFor(
                    model => model.FaseId,
                    new SelectList(listaFases, "Id", "FaseAtualCampeonato"),
                    "Selecione...",
                    new {
                        @class = "dropdown-toggle form-control",
                        style = "width: 100%",
                        @required = true,
                        Id = "Id",
                        @tabindex = "1"
                    }
                )
            </div>
            <div class="form-group">
                <label asp-for="InicioJogo" class="control-label"></label>
                <input asp-for="InicioJogo" class="form-control" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<hr>
<br>
<div>
    <a asp-action="Index">Voltar</a>
</div>
