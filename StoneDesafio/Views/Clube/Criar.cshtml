@model StoneDesafio.Models.Clube


@{
    ViewData["Title"] = "Criar novo clube";
    var listaGrupo = (List<Grupo>)ViewData["ListaGrupo"];
}

<h1>Criar novo clube</h1>
    
<div class="row">
    <div class="col-md-4">
        <form asp-action="criar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UrlFoto" class="control-label"></label>
                <input asp-for="UrlFoto" class="form-control" />
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Grupo)
                @Html.ValidationMessageFor(model => model.Grupo, "", new { @class = "text-danger" })
                @Html.DropDownListFor(
                model => model.GrupoId,
                new SelectList(listaGrupo, "Id", "Nome"),
                    "Selecione...",
                        new {
                        @class = "dropdown-toggle form-control",
                        style = "width: 100%",
                        @required = true,
                        Id = "Id",
                        @tabindex = "1"
                    }
                )
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<hr>
<br>
<div>
    <a asp-action="Index">Voltar</a>
</div>
