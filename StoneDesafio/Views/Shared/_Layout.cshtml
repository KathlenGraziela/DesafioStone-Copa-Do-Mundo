<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"] Copa do Mundo</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="icon" href="https://midias.correiobraziliense.com.br/_midias/jpg/2022/04/01/766x527/1_mascote_copa_do_mundo_catar-7685385.jpeg">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-dark bg-dark border-bottom box-shadow mb-3 shadow-lg rounded-0">
            <div class="container-fluid w-75 flex-grow-1 flex-md-grow-0">
                <div class="mb-2 justify-content-between d-flex m-auto">
                    <div>
                        <a class="navbar-brand p-3" asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="https://image.similarpng.com/very-thumbnail/2020/08/3D-soccer-ball-on-transparent-background-PNG.png" alt="bandeira" style="height:30px; display: inline-block">
                            Copa do Mundo 2022</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse justify-content-between text-center">
                    <ul class="navbar-nav flex-grow-1 text-white align-content-end">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Clube" asp-action="Index">Clubes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Jogo" asp-action="Index">Jogos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Grupo" asp-action="Index">Grupos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Resultado" asp-action="Index">Resultados</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Fase" asp-action="Index">Fases</a>
                        </li>
                    </ul>
                    <div class="d-flex justify-content-center">
                        <ul class="d-flex gap-1 mb-0 flex-wrap justify-content-center">
                            @*Finalizar usando o link para alterar dados - apoio samuel*@
                            <li>
                                <a class="nav-link text-white" href="Link do alterar">
                                    <span class="glyphicon glyphicon-user"></span>Alterar dados
                                </a>
                            </li>
                            <li>
                                <a class="nav-link text-white" asp-controller="Login" asp-action="Sair">
                                    <span class="glyphicon glyphicon-log-in"></span> Sair
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 m-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bottom-0 position-fixed vw-100">
        <div class="container">
            &copy; 2022 - Trilha de Especialização StoneTech
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

