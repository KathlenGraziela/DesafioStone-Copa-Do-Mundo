@model StoneDesafio.Models.Resultado


@{
    ViewData["Title"] = "Inserir Resultado";
}

<h1>Inserir Resultado</h1>
    
<div class="row">
    <div class="col-md-4">
        <form asp-action="criar">
            <div class="form-group">
                <label asp-for="GolsClubeA" class="control-label"></label>
                <input asp-for="GolsClubeA" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="GolsClubeB" class="control-label"></label>
                <input asp-for="GolsClubeB" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FimJogo" class="control-label"></label>
                <input asp-for="FimJogo" class="form-control" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr>
<br>
<div>
    <a asp-action="Index">Voltar</a>
</div>
